    <Brush x:Key="MyWhiteBackground">AntiqueWhite</Brush>

    <Color x:Key="WindowColor">#FFFFDAB9</Color>
    <Color x:Key="ContentAreaColorLight">#856e60</Color>
    <Color x:Key="ContentAreaColorDark">#483e37</Color>

    <Color x:Key="DisabledControlLightColor">#FFE8EDF9</Color>
