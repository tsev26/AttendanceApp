<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Attendance.WPF.Converters">


    <converters:BoolToVisibilityConverter
        x:Key="BoolToVisibilityConverter"
        FalseValue="Hidden"
        TrueValue="Visible" />

    <converters:TwoBoolsToVisibilityConverter x:Key="TwoBoolsToVisibilityConverter" />

    <BooleanToVisibilityConverter x:Key="bool2VisibilityConverter" />

    <converters:TimeOnlyConverter x:Key="TimeOnlyConverter" />

    <converters:DisplayEnumNameConverter x:Key="DisplayEnumNameConverter" />

    <!--  TextBlock  -->
    <Style TargetType="{x:Type TextBox}">
        <Setter Property="Padding" Value="2" />
    </Style>

    <!--  PasswordBox  -->
    <Style TargetType="{x:Type PasswordBox}">
        <Setter Property="Padding" Value="2" />
    </Style>

    <!--  TextBlock Header  -->
    <Style x:Key="Header" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="FontWeight" Value="UltraBold" />
    </Style>


    <!--  TextBlock Detail  -->
    <Style x:Key="DetailTextBlock" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="FontWeight" Value="Medium" />
    </Style>





    <!--  Control colors.  -->
    <Brush x:Key="BackgroundColor">#FFFFDAB9</Brush>


    <Brush x:Key="ListViewItemColorA">#FFFFDAB9</Brush>
    <Brush x:Key="ListViewItemColorB">#FFFFEBCD</Brush>





    <LinearGradientBrush x:Key="ListViewItemColorSelected" StartPoint="0.7,0" EndPoint="0.7,1">
        <GradientStop Offset="0" Color="{DynamicResource ControlLightColor}" />
        <GradientStop Offset="0.7" Color="{DynamicResource ControlMediumColor}" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ListViewItemColorMouseOver" StartPoint="0.7,0" EndPoint="0.7,1">
        <GradientStop Offset="0" Color="{DynamicResource ControlLightColor}" />
        <GradientStop Offset="1" Color="{DynamicResource ControlMediumLightColor}" />
    </LinearGradientBrush>

