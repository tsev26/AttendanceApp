        <LinearGradientBrush.GradientStops>
            <GradientStopCollection>
                <GradientStop Offset="0" Color="#000000FF" />
                <GradientStop Offset="0.4" Color="{DynamicResource ControlLightColor}" />
                <GradientStop Offset="0.6" Color="{DynamicResource ControlMediumColor}" />
