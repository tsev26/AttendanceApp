<UserControl
    x:Class="Attendance.WPF.Views.UserProfileView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Attendance.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:Attendance.WPF.ViewModels"
    d:DataContext="{d:DesignInstance viewmodels:UserProfileViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border
            Grid.Column="0"
            Margin="10,10,10,10"
            Padding="5"
            Background="AntiqueWhite"
            BorderBrush="Black"
            BorderThickness="1"
            CornerRadius="5">
            <Grid Margin="10" HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="5"
                    Style="{StaticResource DetailTextBlock}"
                    Text="Jméno" />
                <TextBox
                    Grid.Row="0"
                    Grid.Column="1"
                    Width="200"
                    Height="35"
                    Margin="5"
                    VerticalContentAlignment="Center"
                    FontSize="20"
                    Text="{Binding UpdatesOnUser.FirstName}" />

                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="5"
                    Style="{StaticResource DetailTextBlock}"
                    Text="Příjmení" />
                <TextBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Width="200"
                    Height="35"
                    Margin="5"
                    VerticalContentAlignment="Center"
                    FontSize="20"
                    Text="{Binding UpdatesOnUser.LastName}" />

                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="5"
                    Style="{StaticResource DetailTextBlock}"
                    Text="Email" />
                <TextBox
                    Grid.Row="2"
                    Grid.Column="1"
                    Width="200"
                    Height="35"
                    Margin="5"
                    VerticalContentAlignment="Center"
                    FontSize="20"
                    Text="{Binding UpdatesOnUser.Email}" />

                <TextBlock
                    Grid.Row="3"
                    Grid.ColumnSpan="2"
                    Margin="5,30,5,0"
                    HorizontalAlignment="Center"
                    Style="{StaticResource DetailTextBlock}"
                    Text="Závazek" />
                <TextBlock
                    Grid.Row="4"
                    Grid.ColumnSpan="2"
                    Margin="0,0,0,5"
                    HorizontalAlignment="Center"
                    FontSize="14"
                    Style="{StaticResource DetailTextBlock}"
                    Text="{Binding ObligationFrom}" />

                <TextBlock
                    Grid.Row="5"
                    Grid.Column="0"
                    Style="{StaticResource DetailTextBlock}"
                    Text="Pravidelná pracovní doba" />
                <ToggleButton
                    Grid.Row="5"
                    Grid.Column="1"
                    Width="50"
                    Height="35"
                    Margin="5"
                    VerticalContentAlignment="Center"
                    IsChecked="{Binding UpdatesOnUser.Obligation.HasRegularWorkingTime, Mode=TwoWay}" />

                <Grid
                    Grid.Row="6"
                    Grid.ColumnSpan="2"
                    Visibility="{Binding UpdatesOnUser.Obligation.HasRegularWorkingTime, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Style="{StaticResource DetailTextBlock}"
                        Text="Pracovní doba" />
                    <TextBox
                        Grid.Row="0"
                        Grid.Column="1"
                        Width="200"
                        Height="35"
                        Margin="5"
                        VerticalContentAlignment="Center"
                        FontSize="20"
                        PreviewTextInput="NumberValidationTextBox"
                        Text="{Binding UpdatesOnUser.Obligation.MinHoursWorked}" />

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Style="{StaticResource DetailTextBlock}"
                        Text="Začátek pracovní doby" />
                    <TextBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Width="200"
                        Height="35"
                        Margin="5"
                        VerticalContentAlignment="Center"
                        FontSize="20"
                        Text="{Binding UpdatesOnUser.Obligation.LatestArival, StringFormat=HH:mm}" />

                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        Style="{StaticResource DetailTextBlock}"
                        Text="Konec pracovní doby" />
                    <TextBox
                        Grid.Row="2"
                        Grid.Column="1"
                        Width="200"
                        Height="35"
                        Margin="5"
                        VerticalContentAlignment="Center"
                        FontSize="20"
                        Text="{Binding UpdatesOnUser.Obligation.EarliestDeparture, StringFormat=HH:mm}" />


                    <Grid
                        Grid.Row="3"
                        Grid.ColumnSpan="2"
                        Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            Grid.ColumnSpan="7"
                            Margin="5"
                            HorizontalAlignment="Center"
                            Style="{StaticResource DetailTextBlock}"
                            Text="Pracuje v dny" />

                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            HorizontalAlignment="Center"
                            Style="{StaticResource DetailTextBlock}"
                            Text="Po" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="1"
                            HorizontalAlignment="Center"
                            Style="{StaticResource DetailTextBlock}"
                            Text="Út" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="2"
                            HorizontalAlignment="Center"
                            Style="{StaticResource DetailTextBlock}"
                            Text="St" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="3"
                            HorizontalAlignment="Center"
                            Style="{StaticResource DetailTextBlock}"
                            Text="Čt" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="4"
                            HorizontalAlignment="Center"
                            Style="{StaticResource DetailTextBlock}"
                            Text="Pá" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="5"
                            HorizontalAlignment="Center"
                            Style="{StaticResource DetailTextBlock}"
                            Text="So" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="6"
                            HorizontalAlignment="Center"
                            Style="{StaticResource DetailTextBlock}"
                            Text="Ne" />

                        <ToggleButton
                            Grid.Row="2"
                            Grid.Column="0"
                            IsChecked="{Binding UpdatesOnUser.Obligation.WorksMonday}" />
                        <ToggleButton
                            Grid.Row="2"
                            Grid.Column="1"
                            IsChecked="{Binding UpdatesOnUser.Obligation.WorksTuesday}" />
                        <ToggleButton
                            Grid.Row="2"
                            Grid.Column="2"
                            IsChecked="{Binding UpdatesOnUser.Obligation.WorksWednesday}" />
                        <ToggleButton
                            Grid.Row="2"
                            Grid.Column="3"
                            IsChecked="{Binding UpdatesOnUser.Obligation.WorksThursday}" />
                        <ToggleButton
                            Grid.Row="2"
                            Grid.Column="4"
                            IsChecked="{Binding UpdatesOnUser.Obligation.WorksFriday}" />
                        <ToggleButton
                            Grid.Row="2"
                            Grid.Column="5"
                            IsChecked="{Binding UpdatesOnUser.Obligation.WorksSaturday}" />
                        <ToggleButton
                            Grid.Row="2"
                            Grid.Column="6"
                            IsChecked="{Binding UpdatesOnUser.Obligation.WorksSunday}" />
                    </Grid>
                </Grid>

            </Grid>
        </Border>

        <Grid Grid.Column="1">
            <Border
                Margin="10,10,10,10"
                Padding="5"
                Background="AntiqueWhite"
                BorderBrush="Black"
                BorderThickness="1"
                CornerRadius="5" />
            <Grid Margin="20">

                <Button
                    Width="200"
                    Height="50"
                    Margin="10"
                    Command="{Binding UpdatesOnUserCommand}"
                    CommandParameter="Add"
                    Content="Odeslat úpravy profilu"
                    Style="{StaticResource MenuButton}" />

            </Grid>
        </Grid>

    </Grid>
</UserControl>
